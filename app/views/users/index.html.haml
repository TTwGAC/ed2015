%h1 Listing users
%table
  %tr
    %th Name
    %th Email
    %th Team
    %th Actions
  - @users.each do |user|
    %tr
      %td
        = user.first_name
        = "\"#{user.nickname}\""
        = user.last_name
      %td= user.email
      %td
        %a{href: "/teams/#{user.team_id}"}
          = user.team_name
      %td
        = link_to 'Show', user
        = link_to('Edit', edit_user_path(user)) if can? :edit, user
        = link_to('Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }) if can? :delete, user
%br/
- if can? :create, User
  = link_to 'New User', new_user_path
