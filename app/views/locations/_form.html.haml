= simple_form_for(@location, remote: local_assigns[:remote]) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    = f.input :address
    = f.input :cluster_id, collection: Cluster.find(:all)
    \- OR -
    = f.input :latitude
    = f.input :longitude
  .form-actions
    = f.button :submit
