%h1 Listing teams
%table
  %tr
    %th Name
    %th Slogan
    %th Actions
  - @teams.each do |team|
    %tr
      %td= team.name
      %td= team.slogan
      %td
        = link_to 'Show', team
        = link_to 'Edit', edit_team_path(team)
        = link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= if can? :create, Team
  = link_to 'New Team', new_team_path
