%h1 Listing teams
%table.table
  %tr
    %th Name
    %th # Players
    %th Slogan
    - if can? :manage, Team
      %th Paid?
    %th Actions
  - @teams.each do |team|
    %tr
      %td= link_to team.name, team
      %td= team.players.count
      %td= team.slogan
      - if can? :manage, Team
        %td= team.paid ? "Yes" : "No"
      %td
        = link_to('Edit', edit_team_path(team)) if can? :edit, team
        = link_to('Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }) if can? :delete, team
%br/
- if can? :create, Team
  = link_to 'New Team', new_team_path
