- javascript 'stupidtable.js'
%h1 Listing Teams
%table#teams.table
  %thead
    %tr.header
      %th
      %th{'data-sort' => 'string'} Name
      %th{'data-sort' => 'int'} # Players
      %th Slogan
      - if can? :manage, Team
        %th Playing?
  %tbody
    - @teams.each do |team|
      %tr
        %td= image_tag team.logo_url, size: '24x24'
        %td= link_to team.name, team
        %td= team.players.count
        %td= team.slogan
        - if can? :manage, Team
          %td
            - if team.playing?
              &#x2713; Yes
            - else
              %span{title: team.reasons_not_playing.join(' | ')} &times; No
%br/
- if can? :create, Team
  = link_to 'New Team', new_team_path

:javascript
  $("#teams").stupidtable();
