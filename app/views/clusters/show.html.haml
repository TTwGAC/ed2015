- javascript 'gmaps4rails.js'
%h1= "Cluster: #{@cluster.name}"
- unless @cluster.locations.empty?
  %p
    = gmaps4rails map_data(@cluster.locations)
%p
  %b Sequence:
  = @cluster.sequence
%p
  %b Color:
  = image_tag "map_markers/#{@cluster.color}_Marker.png"
%h3 Locations in this cluster:
%ul
  - @cluster.locations.each do |loc|
    %li= link_to loc.name, loc

%hr

%br
%h3
  Cluster Controls
= link_to 'Edit', edit_cluster_path(@cluster)
|
= link_to 'Delete', @cluster, method: :delete, data: { confirm: 'Really delete this cluster?' }
