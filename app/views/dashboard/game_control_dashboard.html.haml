!!!
%html
  %head
    = airbrake_javascript_notifier
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Get A Clue 2014"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Michroma", media: 'all'
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
    = javascript_include_tag 'gmaps4rails.js'
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '#{ENV['GOOGLE_ANALYTICS_ID']}', 'gac2014.com');
      ga('send', 'pageview');

  %body
    %div#fb-root
    :javascript
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=#{ENV['FACEBOOK_APP_ID']}";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    #main{:role => "main"}
      .container.gchq_dashboard
        .content
          .row-fluid
            .span3
              = render partial: 'leaderboard'
            .span9
              .row-fluid
                .span9
                  Get-A-Clue 2014 (logo)
                .span3
                  Clock
              .row-fluid
                .span9
                  .row-fluid
                    .span12
                      = gmaps4rails map_data(@locations)
                  .row-fluid
                    .span12
                      Radio GAC
                  .row-fluid
                    .span4
                      Puzzle Stats
                    .span4
                      Checkin Stats
                    .span4
                      Penalty Stats

                .span3
                  %h4 Events
          %footer
          = yield :scripts
    %br/
    %br/
    %br/
